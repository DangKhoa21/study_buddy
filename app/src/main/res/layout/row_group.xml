<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_margin="5dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            android:id="@+id/group_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group name"
            android:id="@id/group_name"
            android:layout_toEndOf="@+id/group_image"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_semibold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_des"
            android:text="Description"
            android:layout_below="@+id/group_name"
            android:layout_alignStart="@+id/group_name"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="JOIN"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/group_des"
            android:id="@+id/join_butt"
            android:background="@drawable/round_butt"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="2dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile"
            android:layout_below="@+id/group_image"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:id="@+id/creator_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/creator_image"
            android:id="@+id/creator_name"
            android:layout_toEndOf="@id/creator_image"
            android:text="Creator name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"
            android:padding="7dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
